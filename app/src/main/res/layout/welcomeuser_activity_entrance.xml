<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomeuser_mainbg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.benedictlutab.sidelinetg.modules.welcomeUser.entranceActivity">

    <!--Logo-->

    <ImageView
        android:layout_width="270dp"
        android:layout_height="250dp"
        android:background="@drawable/img_logo_main" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="@android:color/white"/>

    <!--Login or Signup?-->

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Login"
        android:textColor="#eeeeee"
        android:textSize="20sp"
        android:background="@drawable/main_btn_bg"/>
    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:text="Sign up"
        android:textColor="#eeeeee"
        android:background="@drawable/welcomeuser_btnsignup_bg"/>

    <!--Terms and Conditions-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="By using this application, you agree to Sideline's"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:backgroundTint="@color/colorPrimaryDark"
        android:enabled="true"
        android:cursorVisible="false"
        android:text="Terms and Conditions"
        android:textColor="#ffffff"
        android:textSize="12sp" />

</LinearLayout>
